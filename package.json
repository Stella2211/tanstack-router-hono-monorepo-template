{
  "name": "tanstack-hono-monorepo-template",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"cd frontend && bun run dev\" \"cd backend && bun run dev\"",
    "check": "tsc --noEmit",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
